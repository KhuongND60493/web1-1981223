{{#each data}}
<div class="clearfix py-3">
    <h3>{{name}}</h3>
    <p class="text-black-50">
        by
        {{author}}<a href="#" onclick="getAllBlogs(undefined,`{{category.id}}`)">{{category.name}}</a>
        {{formatDate date}}
        <a href="#" onclick="getBlogDetail('{{id}}')">Comments ({{comments.length}})</a>
    </p>
    <img src="{{thumbpath}}" alt="{{name}}" class="float-start me-3 rounded-4 border" />
    <p class="text-black-50">{{{description}}} </p>
</div>
<div class="py-3" id="leave-comments">
    <h3>Leave your comments</h3>
    <h3>Post comment as guest</h3>
    <form action="post" action="#" class="text-black" onsubmit="onSendCommentBlog(event,'{{id}}')">
        <div class="row">
            <div class="col-4">
                <div class="mb-3">
                    <label for="name" class="form-label">Name (required)</label>
                    <input type="text" class="form-control" placeholder="" id="name" name="name" />
                </div>

            </div>
            <div class="col-4">
                <div class="mb-3">
                    <label for="name" class="form-label">Email</label>
                    <input type="email" class="form-control" placeholder="" id="email" name="email" />
                </div>
            </div>
        </div>
        <div>
            <div class="mb-3">
                <textarea class="form-control" name="comment" id="comment" rows="3"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="agree" name="agree" value="1" />
                    <label class="form-check-label text-black-50" for="agree">Agree to terms and conditions</label>
                </div>
            </div>
            <div class="text-end col">
                <button type="submit" class="btn btn-link">
                    Submit Comment
                </button>
            </div>
        </div>

</div>
<div class="text-center">
    <div class="text-success" id="resMsg"></div>
</div>
</form>
</div>

<a name="comments"></a>
<div class="bg-dark text-white-50 text-uppercase">
    comments
</div>
<div class="py-3">
    {{#each comments}}
    <div>
        <p>{{name}} - {{formatDate date}}</p>
        <p>{{summary}}</p>
        <hr />
    </div>
    {{/each}}
</div>
{{/each}}